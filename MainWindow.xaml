<Window x:Class="CoD2_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Call of Duty 2: Spouštěč"
        ResizeMode="NoResize"
        Width="640"
        SizeToContent="Height"
        KeyDown="Window_KeyDown"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="BigButtonStyle"
               TargetType="Button">
            <Setter Property="Padding"
                    Value="20,10" />
            <Setter Property="FontSize"
                    Value="24" />
        </Style>
        <Style x:Key="ServerButtonStyle"
               TargetType="Button">
            <Setter Property="Padding"
                    Value="8,2" />
            <Setter Property="Margin"
                    Value="5,0,0,0" />
        </Style>
    </Window.Resources>

    <Grid Background="Black">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="220" />
        </Grid.RowDefinitions>

        <Image Source="cod.png" />
        <Border>
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1"
                                     StartPoint="0.5,0">
                    <GradientStop Color="#0000"
                                  Offset="0" />
                    <GradientStop Color="Maroon"
                                  Offset="1" />
                </LinearGradientBrush>
            </Border.Background>
        </Border>

        <StackPanel VerticalAlignment="Bottom"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,60">
            <StackPanel Orientation="Horizontal">
                <Button Content="Hrát"
                        Style="{StaticResource BigButtonStyle}"
                        Click="Play_Click" />
                <Button Content="Zabít &amp; Hrát"
                        Style="{StaticResource BigButtonStyle}"
                        Margin="5,0,0,0"
                        Click="KillPlay_Click" />
                <Button Content="Zabít"
                        Style="{StaticResource BigButtonStyle}"
                        Margin="5,0,0,0"
                        Click="Kill_Click" />
            </StackPanel>

            <Grid VerticalAlignment="Bottom"
                  Margin="0,5,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="ServerComboBox"
                          SelectedItem="{Binding CurrentServer}"
                          ItemsSource="{Binding ServerList}"
                          FontFamily="Consolas"
                          FontSize="16"
                          IsEditable="True" />
                <Button Grid.Column="1"
                        Content="Přidat"
                        Style="{StaticResource ServerButtonStyle}"
                        Click="AddServer_Click" />
                <Button Grid.Column="2"
                        Content="Odebrat"
                        Style="{StaticResource ServerButtonStyle}"
                        Click="RemoveServer_Click" />
            </Grid>
        </StackPanel>

        <TextBox x:Name="ConsoleTextBox"
                 Grid.Row="1"
                 VerticalScrollBarVisibility="Visible"
                 HorizontalScrollBarVisibility="Auto"
                 FontFamily="Consolas"
                 IsReadOnly="True"
                 Padding="4,2,0,0" />
    </Grid>
</Window>
